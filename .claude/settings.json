{
	"permissions": {
		"allow": [
			"Bash(pnpm dev)",
			"Bash(pnpm build)",
			"Bash(pnpm build:watch)",
			"Bash(pnpm lint*)",
			"Bash(pnpm format*)",
			"Bash(pnpm type:check)",
			"Bash(pnpm test*)",
			"Bash(pnpm storybook)",
			"Bash(pnpm build-storybook)",
			"Bash(pnpm changeset*)"
		]
	},
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-edit-check.sh",
						"timeout": 30000
					}
				]
			}
		]
	}
}
