{
	"name": "@kim-yeo-appweb-lab/ui",
	"version": "1.1.5",
	"description": "범용 디자인 시스템 - React 19 + Tailwind CSS 4 UI 컴포넌트 라이브러리",
	"keywords": [
		"react",
		"ui",
		"component-library",
		"design-system",
		"tailwindcss",
		"typescript"
	],
	"homepage": "https://kim-yeo-appweb-lab.github.io/kim-yeo-appweb-lab-ui/",
	"bugs": {
		"url": "https://github.com/kim-yeo-appweb-lab/kim-yeo-appweb-lab-ui/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kim-yeo-appweb-lab/kim-yeo-appweb-lab-ui.git"
	},
	"license": "MIT",
	"author": "kim-yeo-appweb-lab",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./styles": "./src/styles/index.css",
		"./styles/*": "./src/styles/*"
	},
	"files": [
		"dist",
		"src/styles"
	],
	"sideEffects": [
		"**/*.css"
	],
	"engines": {
		"node": ">=24.13.0"
	},
	"packageManager": "pnpm@10.29.3",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"dev": "concurrently \"pnpm build:watch\" \"pnpm storybook\" --names \"build,story\" --prefix-colors \"cyan,magenta\"",
		"build": "rm -rf dist && rollup -c rollup.config.ts --configPlugin esbuild && tsc -p tsconfig.build.json",
		"build:watch": "rollup -c rollup.config.ts --configPlugin esbuild --watch",
		"clean": "rm -rf dist storybook-static",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"type:check": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"changeset": "changeset",
		"version": "changeset version",
		"prepublishOnly": "pnpm build",
		"release": "pnpm build && changeset publish"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.4.0"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.28.0",
		"@chromatic-com/storybook": "^5.0.1",
		"@eslint/js": "^9",
		"@rollup/plugin-node-resolve": "^16.0.3",
		"@storybook/addon-a11y": "^10.2.8",
		"@storybook/addon-docs": "^10.2.8",
		"@storybook/addon-vitest": "^10.2.8",
		"@storybook/react": "^10.2.8",
		"@storybook/react-vite": "^10.2.8",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.0.0",
		"@testing-library/react": "^16.0.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^25.2.3",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"concurrently": "^9.2.1",
		"eslint": "^9",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"jsdom": "^28.1.0",
		"lefthook": "^2.1.1",
		"prettier": "^3.8.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"remark-gfm": "^4.0.1",
		"rollup": "^4.57.1",
		"rollup-plugin-esbuild": "^6.2.1",
		"rollup-plugin-preserve-directives": "^0.4.0",
		"storybook": "^10.2.8",
		"tailwindcss": "^4",
		"typescript": "^5",
		"typescript-eslint": "^8",
		"vitest": "^3.0.0"
	},
	"peerDependencies": {
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tailwindcss": "^4.0.0"
	}
}
